<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.way" android:versionCode="5" android:versionName="5.0">
	<application android:icon="@drawable/icon" android:label="@string/app_name">

		<receiver android:name="com.way.sms.SMSReceiver">
			<intent-filter>
				<action android:name="android.provider.Telephony.SMS_RECEIVED" />
			</intent-filter>
		</receiver>
		
		<service android:name="xmpp.XMPPService">
			<intent-filter>
				<action android:name="com.way.xmpp.XMPP_SERVICE" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</service>
		
		<activity android:name="xmpp.XMPPSetup">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"></action>
				<category android:name="android.intent.category.LAUNCHER"></category>
			</intent-filter>
		</activity>

	</application>
	<uses-permission android:name="android.permission.RECEIVE_SMS" />
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
	<uses-permission android:name="android.permission.SEND_SMS" />
	<uses-permission android:name="android.permission.INTERNET" />
	
	<uses-sdk android:minSdkVersion="7" />

</manifest> 